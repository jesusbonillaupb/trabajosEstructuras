class proveedor:
    def __init__(self,nombre,ciudad,articulos,activo,listaarticulos):
        self.nombre=nombre
        self.ciudad=ciudad
        self.articulos=articulos
        self.activo=activo
        self.listaarticulos=listaarticulos
class articulo:
     def __init__(self,id,name,valor):
         self.id=id
         self.name=name
         self.valor=valor

a1=articulo(2854,"papas fritas",1800)
a2=articulo(3854,"chocoso",1200)
a3=articulo(4854,"cocacola",1800)
a4=articulo(4659,"ponymalta",1500)

artpro1=[a2.name,a2.name,a2.name,a3.name]
numpro1=len(artpro1)
artpro2=[a4.name,a3.name,a3.name]
numpro2=len(artpro2)
artpro3=[a1.name,a3.name,a2.name]
numpro3=len(artpro3)
artpro4=[]
numpro4=len(artpro3)
proveedor1=proveedor("juan","bucaramanga",numpro1,True,artpro1)
proveedor2=proveedor("mateo","bogota",numpro2,True,artpro2)
proveedor3=proveedor("luis","medellin",numpro3,True,artpro3)
proveedor4=proveedor(" ","",numpro4,False,artpro4)
continuar=True
while continuar==True:
    print("1-consultar un proveedor\n2-actualizar ciudad\n3-actualizar numero articulos proveedor")
    opciones=int(input("que deseas hacer: "))
    if opciones==1:
        n=input("ingrese el nombre del proveedor ")
        if n==proveedor1.nombre or n==proveedor2.nombre or n==proveedor3.nombre or n==proveedor4.nombre:
            if n==proveedor1.nombre:
                print("ciudad=",proveedor1.ciudad,",numero de articulos=",proveedor1.articulos)
                pr=int(input("desea conocer cuales son sus articulos \n1-si 2-no "))
                if pr==1:
                    print(proveedor1.listaarticulos)
            if n==proveedor2.nombre:
                print("ciudad=",proveedor2.ciudad,",numero de articulos=",proveedor2.articulos)
                pr=int(input("desea conocer cuales son sus articulos \n1-si 2-no "))
                if pr==1:
                    print(proveedor2.listaarticulos)
            if n==proveedor3.nombre:
                print("ciudad=",proveedor3.ciudad,",numero de articulos=",proveedor3.articulos)
                pr=int(input("desea conocer cuales son sus articulos \n1-si 2-no "))
                if pr==1:
                    print(proveedor3.listaarticulos)
            if n==proveedor4.nombre:
                print("ciudad=",proveedor4.ciudad,",numero de articulos=",proveedor4.articulos)
                pr=int(input("desea conocer cuales son sus articulos \n1-si 2-no "))
                if pr==1:
                    print(proveedor4.listaarticulos)
        else:
            print("proveedor no registrado")
    if opciones==2:
        if opciones==2:
            nom=input("que proveedor se va a mudar= ")
            ci=input("ciudad a la que se muda= ")
        if nom==proveedor1.nombre or nom==proveedor2.nombre or nom==proveedor3.nombre or nom==proveedor4.nombre:
            if nom==proveedor1.nombre:
                proveedor1.ciudad=ci
                print(proveedor1.nombre,"se mudo a",proveedor1.ciudad)
            if nom==proveedor2.nombre:
                proveedor2.ciudad=ci
                print(proveedor2.nombre,"se mudo a",proveedor2.ciudad)
            if nom==proveedor3.nombre:
                proveedor3.ciudad=ci
                print(proveedor3.nombre,"se mudo a",proveedor3.ciudad)
            if nom==proveedor4.nombre:
                proveedor4.ciudad=ci
                print(proveedor4.nombre,"se mudo a",proveedor4.ciudad)    
        else:
            print("proveedor no registrado")
    if opciones==3:
        con=True
        while con==True:
            proca=input("escribe el nombre del proveedor ")
            if proca==proveedor1.nombre or proca==proveedor2.nombre or proca==proveedor3.nombre or proca==proveedor4.nombre:
                cam=int(input("1-para agregar un articulo\n2-para elminar un articulo "))
                if cam==1:
                    print("cual de estos productos quieres agregar?")
                    agregar=int(input("1-papas fritas 2-chocoso 3-cocacola 4-ponymalta "))
                    if agregar==1:
                        d=a1.name
                    if agregar==2:
                        d=a2.name
                    if agregar==3:
                        d=a3.name
                    if agregar==4:
                        d=a4.name
                    if agregar==1 or agregar==2 or agregar==3 or agregar==4:
                        if proca==proveedor1.nombre:
                            artpro1.append(d)
                            proveedor1.articulos=len(artpro1)
                        if proca==proveedor2.nombre:
                            artpro2.append(d)
                            proveedor2.articulos=len(artpro2)
                        if proca==proveedor3.nombre:
                            artpro3.append(d)
                            proveedor3.articulos=len(artpro3)
                        if proca==proveedor4.nombre:
                            artpro4.append(d)
                            proveedor4.articulos=len(artpro4)
                    else:
                        print("este producto no esta registrado")    
                if cam==2:   
                    print("cual de estos productos quieres remover?")
                    if proca==proveedor1.nombre or proca==proveedor2.nombre or proca==proveedor3.nombre or proca==proveedor4.nombre:
                        if proca==proveedor1.nombre:
                                print(artpro1)
                                f=input("escriba el nombre del producto que quiere remover ")
                                c=artpro1.count(f)
                                if c<1:
                                    print("este producto no esta en la lista asi que no se puede")
                                else:
                                    artpro1.remove(f)
                                    proveedor1.articulos=len(artpro1)
                        if proca==proveedor2.nombre:
                                print(artpro2)
                                f=input("escriba el nombre del producto que quiere remover ")
                                c=artpro2.count(f)
                                if c<1:
                                    print("este producto no esta en la lista asi que no se puede")
                                else:
                                    artpro2.remove(f)
                                    proveedor2.articulos=len(artpro2)
                        if proca==proveedor3.nombre:
                                print(artpro3)
                                f=input("escriba el nombre del producto que quiere remover ")
                                c=artpro3.count(f)
                                if c<1:
                                    print("este producto no esta en la lista asi que no se puede")
                                else:
                                    artpro3.remove(f)
                                    proveedor3.articulos=len(artpro3)
                        if proca==proveedor4.nombre:
                                print(artpro4)
                                f=input("escriba el nombre del producto que quiere remover ")
                                c=artpro4.count(f)
                                if c<1:
                                    print("este producto no esta en la lista asi que no se puede")
                                else:
                                    artpro4.remove(f)
                                    proveedor4.articulos=len(artpro4)
            else:
                print("proveedor no registrado")
            cont=int(input("quiere seguir actualizando productos? escriba 1 para continuar y 0 para finalizar "))
            if cont==0:
                con=False
                                                                                        
        
    continuar=int(input("escriba 1 para continuar con programa y 0 para finalizarlo "))
    if continuar==0:
        continuar=False
print("el programa finalizo")
